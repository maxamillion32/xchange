<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/rv_product_seller_bg"
    android:layout_height="180dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@color/blackColor"
        android:id="@+id/iv_product_seller_image"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="120sp"
        android:layout_marginStart="120sp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_product_seller_title"
            android:layout_height="wrap_content"
            android:textColor="@color/blackColor"
            />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_product_seller_price"
            android:layout_height="wrap_content"
            android:textColor="@color/blackColor"
            />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_product_seller_description"
            android:layout_height="wrap_content"
            android:textColor="@color/blackColor"
            />

    </LinearLayout>
</RelativeLayout>